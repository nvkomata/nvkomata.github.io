---

<div class="places flex select-none overflow-hidden relative min-h-16">
  <div
    class="m-0 py-4 flex shrink-0 justify-around min-w-full min-h-[31px] animate-[marquee_10s_linear_infinite]"
  >
    {buttons.map((button) => <Fragment set:html={button} />)}
  </div>
  <div
    class="m-0 py-4 flex shrink-0 justify-around min-w-full min-h-[31px] animate-[marquee_10s_linear_infinite]"
    aria-hidden="true"
  >
    {buttons.map((button) => <Fragment set:html={button} />)}
  </div>
</div>

<style>
  .places > div {
    img {
      margin: 0 0.25em;
      image-rendering: pixelated;
      transition: scale 0.1s ease-out;
      height: 31px;
      min-height: 31px;
      max-height: 31px;
    }
    img:hover {
      scale: 2;
    }
  }

  .places:hover > div {
    animation-play-state: paused;
  }

  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .places span {
      animation-iteration-count: 1;
      animation-duration: 0.01;
      width: auto;
      padding-left: 0;
    }
  }
</style>
