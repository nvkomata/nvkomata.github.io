---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 // nvkomata">
  <main>
    <video
      class="silly"
      autoplay
      loop
      muted
      playsinline
      poster="https://gitlab.com/uploads/-/system/user/avatar/20382350/avatar.png"
    >
      <source src="outoftouch.mp4" />
    </video>
    <h1>404</h1>
    <p>
      sorry, <del>couldn't <br />find this page</del><br />you're out of touch
    </p>
    <img src="heart.svg" alt="</3" />
    <a href="/">go back</a>
  </main>
</Layout>

<style>
  body {
    margin: 0;
    padding: 0;
    background-color: black;
    overflow-x: hidden;
  }
  .silly {
    max-width: 50em;
  }
  main {
    margin: auto;
    padding: 0 1rem;
    height: 100vh;
    color: white;
    font-size: 13px;
    line-height: 1.6;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    user-select: none;
    font-family: monospace;
  }
  main img {
    max-width: 170px;
    margin-bottom: 1em;
    filter: invert();
    -webkit-filter: invert();
  }
  h1 {
    font-family: serif;
    font-weight: 900;
    font-size: 40px;
    margin: 0 0.3em -0.4em 0;
  }
  main img[alt="</3"] {
    margin-bottom: -5em;
    height: 100px;
    bottom: 11em;
    left: 7em;
    position: relative;
  }
  a {
    user-select: none;
    padding: 0.5em 0.7em;
    color: whitesmoke;
    text-decoration: none;
    font-weight: normal;
    transition: all 0.1s ease-out;
    font-weight: bold;
    font-family: monospace;
  }
  a:hover {
    background-color: white;
    color: black;
  }
  @media only screen and (max-width: 700px) {
    .silly {
      max-width: 40em;
    }
  }
  @media only screen and (max-width: 550px) {
    .silly {
      max-width: 25em;
    }
  }
</style>
