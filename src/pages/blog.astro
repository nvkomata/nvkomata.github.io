---
import Layout from "../layouts/Layout.astro";
---

<Layout title="blog // nvkomata">
  <main>
    <h1>SOON</h1>
    <p>some day, any day, anyway</p>
    <a href="https://akko.wtf/nvkomata">my fedi (microblogs)</a>
    <a href="/">go back</a>
  </main>
</Layout>

<style>
  body {
    margin: 0;
    padding: 0;
    background-color: black;
    overflow-x: hidden;
  }
  .silly {
    max-width: 50em;
  }
  main {
    margin: auto;
    padding: 0 1rem;
    height: 100vh;
    color: white;
    font-size: 13px;
    line-height: 1.6;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    user-select: none;
    font-family: monospace;
  }
  main img {
    max-width: 170px;
    margin-bottom: 1em;
    filter: invert();
    -webkit-filter: invert();
  }
  h1 {
    font-family: serif;
    font-weight: 900;
    font-size: 40px;
    margin: 0 0 -0.4em 0;
  }
  a {
    user-select: none;
    padding: 0.5em 0.7em;
    color: whitesmoke;
    text-decoration: none;
    font-weight: normal;
    transition: all 0.1s ease-out;
    font-weight: bold;
    font-family: monospace;
  }
  a:hover {
    background-color: white;
    color: black;
  }
  @media only screen and (max-width: 700px) {
    .silly {
      max-width: 40em;
    }
  }
  @media only screen and (max-width: 550px) {
    .silly {
      max-width: 25em;
    }
  }
</style>
